@{
  ViewBag.Title = "Projects";
}
<!--ADD MODAL-->
<section class="container">
  <section class="modal fade" id="addProjectModal" role="dialog">
    <section class="modal-dialog modal-lg">
      <form class="modal-content pl-5 pr-5 form-update-project">
        <section class="modal-header modal-header-form">
          <h4>Enter your details</h4>
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
        </section><!--modal header-->
        <!--Error msg-->
        <section>
          <p class="errorMessage m-0"></p>
          <p class="thrownerror m-0"></p>
        </section>
        <section class="modal-body text-center ">
          <div class="form-group">
            <input type="hidden" class="form-control madalInput" value="0" name="Order">
            <input type="hidden" class="form-control madalInput" value="0" name="Id">
          </div>
          <div class="form-group">
            <input class="form-control madalInput " type="text" placeholder="Services name" autocomplete="off" name="Name">
            <p class="text-left update-validation nameRequired"></p>
          </div>
        
          <div class="custom-file">
            <input type="file" class="custom-file-input " placeholder="Choose image" accept="image/*" name="Image">
            <label class="custom-file-label" for="customFile">Choose image</label>
            <p class="text-left update-validation imgRequired"></p>
          </div>
        </section><!--modal body-->
        <section class="modal-footer justify-content-center">
          <button type="button" class="btn btn-info w-25 btn-lg update">Update</button>
        </section><!--modal-footer-->
        @Html.AntiForgeryToken()
      </form><!--modal-content-->
      <!--Modal succses-->
      <section class="modal-content succsses-content d-none">
        <section class="modal-header succsses-header">
          <button type="button" class="close" data-dismiss="modal">
            &times;
          </button>
        </section><!--modal header-->
        <section class="modal-body text-center succsses-body">
          <svg class="success">
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#success"></use>
          </svg>
          <p class="thanks">Thank you!</p>
          <p>Successfully services updating</p>
        </section><!--modal body-->
      </section><!--modal-content-->
    </section><!--modal-dilog-->
  </section><!--modal fade-->
</section><!--modal container-->








<section class=" container-fluid tab-pane active   pl-5 pr-5 " id="tableProjects">
  <table data-toggle="table">
    <thead class="thead-dark">
      <tr>
        <th class="d-none">Order</th>
        <th class="d-none">Id</th>
        <th>Select</th>
        <th>Projects name</th>
        <th>Images</th>
        <th>Action</th>
      </tr>
    </thead>
    <tbody class="tableProjectsBody">
    </tbody>
  </table>
</section>

<template id="tableProjectsTemplate">
  <tr>
    <td class="order d-none"></td>
    <td class="id d-none"></td>
    <td class="text-center">
      <label class="checkbox"><input type="checkbox" /><span class="primary"></span></label>
    </td>
    <td><p class="name-services"></p></td>
    <td class=" td-img">
      <img src="" alt="" class="img-proj" />
    </td>
    <td class="text-center">
      <button type="button" class="btn delete-services">
        <span data-toggle="tooltip" title="delete">
          <svg class="delete">
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#delete"></use>
          </svg>
        </span>
        Delete
      </button>
      <button type="button" class="btn edit-btn editBtn" data-toggle="modal" data-target="#">
        <span data-toggle="tooltip" title="edit">
          <svg class="edit">
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#edit"></use>
          </svg>
        </span>
        Edit
      </button>
    </td>
  </tr>
</template>

