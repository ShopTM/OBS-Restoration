
@{
  ViewBag.Title = "Contact";
}

@section Scripts {
  <script src="~/Content/Js/jquery.validate.min.js"></script>
  <script src="~/Content/Js/Custom/contact.js"></script>
  <script src="~/Content/Js/additional-methods.min.js"></script>
}
<section class="container-fluid">
  <section class="row">
    <section class="col-lg-12 contacts-bg">
      <section class="slide-text contact-us">
        <h2>Contact us</h2>
      </section>
    </section> <!-- contacts-bg -->
  </section> <!--row-->
  <section class="container">
    <section class="row ">
      <section class="col-sm-12 ">
        <h3>Contact us</h3>
        <section class="hr-heading"></section>
        <p>
          Please feel free to call us to discuss your upcoming project!
          For inquiries about employment, sub-contracting for us, or information about our current projects,
          please use the form below so we can connect you to the best person to help you.
        </p>
      </section> <!--col-sm-12 -->
    </section> <!--row-->
    <section class="row detail">
      <section class="col-lg-5 col-md-12 ">
        <h3>Contact details</h3>
        <!-- ADRESS -->
        <span class="contact">
          <svg>
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#placeholder"></use>
          </svg>
          <span class="text-span"> 15, Jordan Hofer way, Woodbridge, Ontario</span>
        </span>
        <!-- PHONE -->
        <span class="contact">
          <svg>
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#email"></use>
          </svg>
          <span class="text-span">obsrestorationltd@gmail.com</span>

        </span>
        <!-- EMAIL -->
        <span class="contact ">
          <svg class="linkedin-contact">
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#telephone"></use>
          </svg>
          <span class="text-span"> 416.558.6691</span>
        </span>
        <!-- LINKDIN -->
        <span class="linkedin">
          <a target="_blank" href=" https://www.linkedin.com/in/oleg-slepenyuk-8b0406119">
            <svg class="linkedin-contact ">
              <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#linkedin"></use>
            </svg>
          </a>
        </span>
      </section> <!--col-lg-5 col-sm-12-->
      <section class="col-lg-7 col-md-12">
        <a target="_blank" href="https://www.google.com/maps/place/15+Jordan+Hofer+Way">
          <img src="../../Content/Images/map.png" />
        </a>
      </section> <!--col-lg-7 col-sm-12-->
    </section> <!--roe detail-->
    <section class="form-touch">
      <section>
        <p class="errorMessage"></p>
      </section>  <!--errorMessage-->
      <h5>Get in touch with us</h5>
      <form class="needs-validation contact-form" id="contactus-form">
        @Html.AntiForgeryToken();
        <section class="row">
          <section class="col-lg-6 form-group">
            <label for="fiirst name" class="require">Name</label>
            <input type="text" class="form-control required" name="FullName" />
          </section> <!--form-group-->
          <section class="col-lg-6 form-group ">
            <label for="EmailAddress" class="require">Email address</label>
            <input type="email" class="form-control required" name="EmailAddress" />
          </section><!--form-group-->
        </section> <!--row-->
        <section class="row">
          <section class="col-lg-6 form-group ">
            <label for="phone">Phone number</label>
            <input type="tel" class="form-control" name="PhoneNumber">
          </section><!--form-group-->
          <section class="col-lg-6 form-group ">
            <label for="company">Company</label>
            <input type="text" class="form-control" name="Company">
          </section><!--form-group-->
        </section>
        <section class="custom-file ">
          <input type="file" class="custom-file-input file" name="File" />
          <label class="custom-file-label " for="File">Choose your file</label>
        </section> <!--custom-file-->
        <section class="custom-file ">
          <input type="file" class="custom-file-input file" name="File" />
          <label class="custom-file-label " for="File">Choose your file</label>
        </section> <!--custom-file-->
        <section class="custom-file ">
          <input type="file" class="custom-file-input file" name="File" />
          <label class="custom-file-label " for="File">Choose your file</label>
        </section> <!--custom-file-->
        <section class="custom-file ">
          <input type="file" class="custom-file-input file" name="File" />
          <label class="custom-file-label " for="File">Choose your file</label>
        </section> <!--custom-file-->
        <section class="custom-file ">
          <input type="file" class="custom-file-input file" name="File" />
          <label class="custom-file-label " for="File">Choose your file</label>
        </section> <!--custom-file-->
        <section class="row">
          <section class="col-lg-12  form-group">
            <label for="message" class="require">How can we help?</label>
            <textarea class="form-control textarea required" rows="5" name="Message"></textarea>
          </section> <!--form-group-->
        </section> <!--row-->
        <button type="submit" class="btn btnForm button align-self-center">Submit</button>
      </form>
    </section> <!--form-touch-->
  </section><!--container-->
  <!-- Modal -->
  <section class="container" data-toggle="modal" data-target="#myModal">
    <section class="modal fade" id="myModal" role="dialog">
      <section class="modal-dialog modal-lg">
        <section class="modal-content">
          <section class="modal-header">
            <button type="button" class="close" data-dismiss="modal">
              &times;
            </button>
          </section><!--modal header-->
          <section class="modal-body text-center">
            <svg class="success">
              <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#success"></use>
            </svg>
            <p class="thanks">Thank you!</p>
            <p>Your message has been sent successfully!</p>
          </section><!--modal body-->
          <section class="modal-footer">
            <button type="button" class="btn btn-default" data-dismiss="modal">Close</button>
          </section><!--modal-footer-->
        </section><!--modal-content-->
      </section><!--modal-dilog-->
    </section><!--modal fade-->
  </section><!--modal container-->
</section><!--container-fluid-->
