
@{
  ViewBag.Title = "Careers";
}

<section class="container-fluid">
  <!----------------------------BG CAREER------------------------------>
  <section class="row">
    <section class="col-lg-12 career-bg">
      <h2>Your career starts <span> here!</span></h2>
    </section> <!--career-bg-text-->
  </section> <!-- career-bg -->
  <!----------------------------------CAREER MAIN----------------------------------------->
  <section class="container">
    <section class="row">
      <section class="col-lg-12 career-descption ">
        <h2>Join our team</h2>
        <section class="hr-heading "></section>
        <p>
          We seek out people who are smart, creative, up for any challenge and like about what they do.
          We offer our candidates competitive wages.  The monthly salary is calculated depending on experience.
          Who want to join  our team.
        </p>
      </section> <!--col-lg-12 career-descption-->
    </section>  <!--row-->
  </section>
  <section class="container-hiring-process">
    <section class="row">
      <section class="col-lg-12">
        <h2> Hiring process</h2>
      </section> <!--col-lg-12--->
      <!--RESUME-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Gulp/app/svg/spites/symbol/sprite.svg#resume"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Resume submission</span>
      </section> <!--hiring-icon HR RESUME--->
      <!--Review OF HR MANAGER-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Gulp/app/svg/spites/symbol/sprite.svg#hiring"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Review of HR managers</span>
      </section> <!--hiring-icon HR MANAGER--->
      <!--INTERVIEW-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Gulp/app/svg/spites/symbol/sprite.svg#interview"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Interview</span>
      </section>  <!--hiring-icon INTERVIEW--->
      <!--HIRING-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Gulp/app/svg/spites/symbol/sprite.svg#resume"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Resume submission</span>
      </section>  <!--hiring-icon HIRING-->
    </section> <!--row-->
  </section><!--container-hiring-process-->
  <section class="container container-form-career">
    <h5>Apply for job</h5>
    
    <form>
      <section class="row">
        <section class="col-sm-6 form-group">
          <label for="fiirst name">First name</label>
          <input type="text" class="form-control" id="first-name" />
        </section>
        <section class="col-lg-6 form-group">
          <label for="fiirst name">Last name</label>
          <input type="text" class="form-control" id="last-name" />
        </section>
      </section>
      <section class="row">
        <section class="col-lg-6 form-group">
          <label for="email">Email</label>
          <input type="email" class="form-control" id="email" />
        </section>
        <section class="col-lg-6 form-group">
          <label for="phone">Phone number</label>
          <input type="tel" class="form-control" id="phone" />
        </section>
      </section>
      <section class="row">
        <section class="col-lg-12  form-group">
          <label for="message">Message</label>
          <textarea class="form-control" rows="5" id="message"></textarea>
        </section>
      </section>
      <section class="custom-file">
        <input type="file" class="custom-file-input" id="customFile">
        <label class="custom-file-label" for="customFile">Choose your resume</label>
      </section>
      <button type="submit" class="btn align-self-center ">Submit</button>
    </form>
  </section>
</section> <!--container-fluid-->