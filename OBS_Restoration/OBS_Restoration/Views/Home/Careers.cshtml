
@{
  ViewBag.Title = "Careers";
}
@section Scripts {
  <script src="~/Content/Js/Custom/contact.js"></script>
}
<section class="container-fluid">
  <!----------------------------BG CAREER------------------------------>
  <section class="row">
    <section class="col-lg-12 career-bg">
      <section class="slide-text">
        <h2>Your career starts <span> here!</span></h2>
      </section>
      </section> <!--career-bg-text-->
    </section> <!-- career-bg -->
  <!----------------------------------CAREER MAIN----------------------------------------->
  <section class="container">
    <section class="row">
      <section class="col-lg-12 career-descption ">
        <h3>Join our team</h3>
        <section class="hr-heading "></section>
        <p>
          We seek out people who are smart, creative, up for any challenge and like about what they do.
          We offer our candidates competitive wages.  The monthly salary is calculated depending on experience.
          Who want to join  our team.
        </p>
      </section> <!--col-lg-12 career-descption-->
    </section>  <!--row-->
  </section>
  <section class="hiring-process">
    <section class="row">
      <section class="col-lg-12">
        <h3> Hiring process</h3>
      </section> <!--col-lg-12--->
      <!--RESUME-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#resume"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Resume submission</span>
      </section> <!--hiring-icon HR RESUME--->
      <!--Review OF HR MANAGER-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#review"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Review of HR managers</span>
      </section> <!--hiring-icon HR MANAGER--->
      <!--INTERVIEW-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#interview"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Interview</span>
      </section>  <!--hiring-icon INTERVIEW--->
      <!--HIRING-->
      <section class="col-lg-3 col-sm-6">
        <span class="hiring-icon">
          <svg>
            <use xlink:href="../../Content/Svg/spites/symbol/sprite.svg#hiring"></use>
          </svg>
        </span>
        <span class="hiring-text-span">Hiring</span>
      </section>  <!--hiring-icon HIRING-->
    </section> <!--row-->
  </section><!--container-hiring-process-->
  <section class="container form-touch">
    <h5>Apply for job</h5>

    <form class="career-form" novalidate >
      @Html.AntiForgeryToken()
      <section class="row">
        <section class="col-sm-6 form-group required">
          <label for="fiirst name">First name</label>
          <input type="text" class="form-control require" name="FirstName" required/>
        </section>
        <section class="col-lg-6 form-group require">
          <label for="LastName">Last name</label>
          <input type="text" class="form-control required" name="LastName" required />
        </section>
      </section>
      <section class="row">
        <section class="col-lg-6 form-group require">
          <label for="Email">Email</label>
          <input type="email" class="form-control required" name="Email" required  />
          <p class="emailTextMessage"></p>
        </section>
        <section class="col-lg-6 form-group require">
          <label for="PhoneNumber">Phone number</label>
          <input type="tel" class="form-control required" name="PhoneNumber" required />
          <p class="phoneTextMessage"></p>
        </section>
      </section>
      <section class="row">
        <section class="col-lg-12  form-group">
          <label for="message">Message</label>
          <textarea class="form-control" rows="5" name="Message"></textarea>
        </section>
      </section>
      <section class="custom-file require ">
        <input type="file" class="custom-file-input file required" multiple name="Resume"  accept=".doc,.docx,.pdf" >
        <label class="custom-file-label fileName" for="Resume">Choose your resume</label>
        <p class="invalidTextFile"></p>
        <p class="invalidTextSize"></p>
      </section> <!--custom-file-->
      <button type="submit" class="btn btnForm align-self-center ">Submit</button>
      <section class="result" role="alert">
      </section>
    </form>
  </section>
</section>

