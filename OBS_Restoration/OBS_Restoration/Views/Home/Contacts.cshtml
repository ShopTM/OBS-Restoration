    <section class="row">
      <section class="col-lg-12 contacts-bg">
        <h2>Contact</h2>
      </section> <!-- contacts-bg -->
    </section> <!--row-->
    <section class="container ">
      
        <section class="row">
            <section class="col-lg-4 contact-datail">
              <h2>Contact details</h2>
              <p><span>Adress:</span> 15, Jordan Hofer way, Woodbridge, Ontario</p>
              <p> <span>Phone:</span> 416.558.6691</p>
              <a target="_blank" href=" https://www.linkedin.com/in/oleg-slepenyuk-8b0406119">
                <svg class="linkedin-contact">
                  <use xlink:href="../../Gulp/app/svg/spites/symbol/sprite.svg#linkedin"></use>
