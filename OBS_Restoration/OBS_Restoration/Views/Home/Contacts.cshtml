          <section class="row">
            <section class="col-lg-8 contact-datail">
              <h2>Get in Touch</h2>
             </section>
         
            <section class="col-sm-12">
              <form class="form-contact">
                <section class=" col-sm-6 form-group">
                  <label for="fiirst name">First name</label>
                  <input type="text" class="form-control" id="first-name" />
                </section>
                <section class=" col-sm-6 form-group">
                  <label for="fiirst name">Last name</label>
                  <input type="text" class="form-control" id="last-name" />
                </section>


                <section class=" col-sm-6 form-group">
                  <label for="email">Email</label>
                  <input type="email" class="form-control" id="email" />
                </section>
                <section class=" col-sm-6 form-group">
                  <label for="phone">Phone number</label>
                  <input type="tel" class="form-control" id="phone" />
                </section>

                <section class=" col-sm-12 form-group">
                  <label for="message">Message</label>
                  <textarea class="form-control" rows="5" id="message"></textarea>
                </section>

                <button type="submit" class="btn align-self-center ">Submit</button>

              </form>
            </section>
            </section>
          </section>
        </section>
      </section>
    </section>


